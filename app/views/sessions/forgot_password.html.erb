<% provide(:title, I18n.t("sessions.forgot_password",:default=>"Forgot password")) %>
<div id="midd-wrapper">
  <div class="front-page">
  <!--Login Page Stats Here-->
    
    <div class="login-wrap">
      <div class="login-inner">
        <div class="relative">
          <div class="login-img"><img src="/assets/login-img.png" alt=""></div>
        </div>
        <div class="login-hd">
            <%= I18n.t("sessions.forgot_password",:default=>"Forgot password")%>
        </div>                
        <%= form_for(:session, url: get_new_password_path) do |f| %>
          <div class="login-cont">                               
            <div class="row-input">
              <label><%= f.label :email, I18n.t("session.email") %></label>
              <%= f.text_field :email, :class =>"login-input form-control" %>
            </div>              
            <div class="row-input btn-div">
              <label>&nbsp;</label>                  
                <%= f.submit I18n.t('sessions.send_instructions', :default => "Send Instructions"), :class=>"btn btn-success" %>
                <%= link_to I18n.t('session.sign_in'), signin_path, :class => "forgot-pass" %>
            </div> 
            </div>
            <div class="login-bott">&nbsp;</div> 
        <% end %>
        </div> 
      </div>
    </div>
  </div>
</div>

