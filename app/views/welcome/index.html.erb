		color: #589309;
		border-radius: 5px;
		box-shadow: inset 0 0 7px #DFDDDD;
		padding: 20px 15px;
		width: 98%;
	}
	.ui-menu .ui-menu-item a {
		text-decoration: none;
		display: block;
		padding: 2px .4em;
		line-height: 3;
		min-height: 0;
		font-weight: normal;
		}

	.ui-menu .ui-menu-item {
		margin-left: 1px;
		padding: 0;
		width: 100%;
		}

	.ui-menu .ui-menu-item a.ui-state-focus, .ui-menu .ui-menu-item a.ui-state-active {
		font-weight: normal;
		margin: -1px;
		color: #fff;
		background: #589309;
		box-shadow: none;
		}

</style>
<script>
	var auto;
	$(document).ready(function () {
		auto = $("#textfield").autocomplete({  
			source: "/search.json",
			minLength: 3,      
			select: function(event,ui) {
				window.location.href = "/search?term="+$('#textfield').val();
			}
		});    
		auto.data("uiAutocomplete")._renderItem = function (ul, item) {  
			return $("<li />")
				.data("item.autocomplete", item)
				.append("<a href='"+item.url+"'><img src='" + item.avatar_path + "' /><span style='font-size:18px;line-height:7px;'>" + item.value + "</span></a>")       
				.appendTo(ul);
		};

		$("#textfield").keypress(function(){
				$("#textfield").addClass('ui-autocomplete-loading');
		})
	});
</script>
