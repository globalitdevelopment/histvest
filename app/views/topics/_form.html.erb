<%= tinymce_assets %>
<%= form_for @topic, :html => {:multipart => true} do |f| %>
  <% if @topic.errors.any? %>
    <div id="error_explanation">
      <h2><%= @topic.errors.count%> <%= I18n.t("error_head.header") %></h2>
      <ul>
      <% @topic.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div id="midd-wrapper">
    <div class="default-main">
      <div class="defult-left">
        <div class="top-btn">
