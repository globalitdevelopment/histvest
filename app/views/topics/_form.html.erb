          <%= link_to I18n.t('topics.cancel'), topics_path, :class => 'btn btn-default' %>
        </div>
        <div class="welcome-text">
            <%= render :partial => 'shared/calendar_and_upload', :locals => { :f => f, :entity => @topic, :entity_name => 'topic' } %>
        </div>
      </div>
      <div class="default-right mt-10">
